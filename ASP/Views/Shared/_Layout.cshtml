<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>

    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <!-- Google Fonts -->
    @Styles.Render("https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,600,600i,700,700i")
    @Styles.Render("https://fonts.googleapis.com/css2?family=Pacifico&display=swap")

    <!-- Vendor CSS Files -->
    @Styles.Render("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/assets/vendor/icofont/icofont.min.css")
    @Styles.Render("~/Content/assets/vendor/boxicons/css/boxicons.min.css")
    @Styles.Render("~/Content/assets/vendor/venobox/venobox.css")
    @Styles.Render("~/Content/assets/vendor/owl.carousel/assets/owl.carousel.min.css")
    @Styles.Render("~/Content/assets/vendor/aos/aos.css")

    <!-- Template Main CSS File -->
    @Styles.Render("~/Content/assets/css/style.css")
    @Styles.Render("~/Content/Site.css")

    @*@Scripts.Render("~/Scripts/modernizr-2.8.3.js")*@
</head>
<body onload="showProgress()">



    <!-- ======= Header ======= -->
    @RenderPage("_Header.cshtml")
    <!-- End Header -->

    @RenderBody()

    <!-- ======= Footer ======= -->
    @RenderPage("_Footer.cshtml")
    <!-- End Footer -->

    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

    @Scripts.Render("~/Scripts/assets/vendor/jquery/jquery.min.js")
    @Scripts.Render("~/Scripts/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")
    @Scripts.Render("~/Scripts/assets/vendor/jquery.easing/jquery.easing.min.js")
    @Scripts.Render("~/Scripts/assets/vendor/php-email-form/validate.js")
    @Scripts.Render("~/Scripts/assets/vendor/isotope-layout/isotope.pkgd.min.js")
    @Scripts.Render("~/Scripts/assets/vendor/venobox/venobox.min.js")
    @Scripts.Render("~/Scripts/assets/vendor/owl.carousel/owl.carousel.min.js")
    @Scripts.Render("~/Scripts/assets/vendor/aos/aos.js")

    <!-- Template Main JS File -->
    @Scripts.Render("~/Scripts/assets/js/main.js")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
